# ---------------------------------------------
# OLIVIA configuration (.env example)
# ---------------------------------------------

# Mode applicatif
MODE_DEMO=true
HTTP_TIMEOUT=15
USER_AGENT=OLIVIA-ULTIMATE/3.0

# Base de données (SQLite par défaut)
DATABASE_URL=sqlite:///olivia.db
SQLALCHEMY_ECHO=false

# PISTE – Identifiants SANDBOX
LEGIFRANCE_CLIENT_ID=demo_client_id
LEGIFRANCE_CLIENT_SECRET=demo_client_secret
JUDILIBRE_CLIENT_ID=demo_client_id
JUDILIBRE_CLIENT_SECRET=demo_client_secret
JUSTICE_BACK_CLIENT_ID=demo_client_id
JUSTICE_BACK_CLIENT_SECRET=demo_client_secret

# PISTE – URLs token et APIs
LEGIFRANCE_TOKEN_URL=https://sandbox-oauth.piste.gouv.fr/api/oauth/token
JUDILIBRE_TOKEN_URL=https://sandbox-oauth.piste.gouv.fr/api/oauth/token
JUSTICE_BACK_TOKEN_URL=https://sandbox-oauth.piste.gouv.fr/api/oauth/token

# Production (décommentez et renseignez uniquement en PROD)
# LEGIFRANCE_CLIENT_ID_PROD=
# LEGIFRANCE_CLIENT_SECRET_PROD=

